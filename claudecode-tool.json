{
  "schema_version": "v1",
  "name": "mcp__claudecode",
  "description": "Call when you want to edit a file in free text or answer any question or modify code. Claude can do basically anything as it is an AI.",
  "authentication": {
    "type": "none"
  },
  "api": {
    "url": "http://localhost:4242/run",
    "type": "openapi",
    "schema": {
      "openapi": "3.0.0",
      "info": {
        "title": "Claude Code API",
        "version": "1.0.0"
      },
      "paths": {
        "/run": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "prompt": {
                        "type": "string",
                        "description": "The prompt to send to Claude Code"
                      },
                      "options": {
                        "type": "object",
                        "properties": {
                          "tools": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "required": ["prompt"]
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Successful response",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "result": {
                          "type": "string"
                        },
                        "error": {
                          "type": "string",
                          "nullable": true
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}